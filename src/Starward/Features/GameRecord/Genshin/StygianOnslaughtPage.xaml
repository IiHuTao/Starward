<?xml version="1.0" encoding="utf-8" ?>
<sf:PageBase x:Class="Starward.Features.GameRecord.Genshin.StygianOnslaughtPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cwc="using:CommunityToolkit.WinUI.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lang="using:Starward.Language"
             xmlns:linq="using:System.Linq"
             xmlns:local="using:Starward.Features.GameRecord.Genshin"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sc="using:Starward.Controls"
             xmlns:sf="using:Starward.Frameworks"
             xmlns:sfg="using:Starward.Features.Gacha"
             xmlns:sh="using:Starward.Helpers"
             xmlns:so="using:Starward.Core.GameRecord.Genshin.StygianOnslaught"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <Page.Resources>
        <sfg:RarityToGIBgConverter x:Key="RarityToGIBgConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <StackPanel Name="Image_Emoji"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="16"
                    Visibility="Collapsed">
            <Image Width="160"
                   Height="160"
                   Source="{StaticResource EmojiPaimon}" />
            <TextBlock HorizontalAlignment="Center"
                       FontSize="16"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Text="{x:Bind lang:Lang.HoyolabToolboxPage_NoData}" />
        </StackPanel>

        <StackPanel Margin="0,24,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Spacing="12">
            <Button Height="36"
                    BorderThickness="0"
                    Command="{x:Bind RefreshDataCommand}"
                    CornerRadius="0,18,18,0"
                    Style="{ThemeResource AccentButtonStyle}">
                <StackPanel Margin="4,0,4,0"
                            Orientation="Horizontal"
                            Spacing="8">
                    <FontIcon FontSize="16" Glyph="&#xE72C;" />
                    <TextBlock Text="{x:Bind lang:Lang.Common_Refresh}" />
                </StackPanel>
            </Button>
            <Button Height="36"
                    BorderThickness="0"
                    CornerRadius="0,18,18,0"
                    Shadow="{ThemeResource ThemeShadow}"
                    Style="{ThemeResource AccentButtonStyle}"
                    Translation="0,0,16"
                    Visibility="Collapsed">
                <StackPanel Margin="4,0,4,0"
                            Orientation="Horizontal"
                            Spacing="8">
                    <FontIcon FontSize="16" Glyph="&#xE9D9;" />
                    <TextBlock Text="{x:Bind lang:Lang.Common_Summary}" />
                </StackPanel>
            </Button>
        </StackPanel>

        <ListView Name="ListView_StygianOnslaughtPageList"
                  Grid.Row="1"
                  Padding="12,0,12,0"
                  ItemsSource="{x:Bind SOList}"
                  SelectionChanged="ListView_StygianOnslaughtPageList_SelectionChanged"
                  SelectionMode="Single">
            <ListView.ItemContainerStyle>
                <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                    <Setter Property="Margin" Value="0,4,0,4" />
                    <Setter Property="Padding" Value="4,0,4,0" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="so:StygianOnslaughtInfo">
                    <Grid Padding="12,8,12,8"
                          Background="{ThemeResource CustomOverlayAcrylicBrush}"
                          CornerRadius="4"
                          RowSpacing="2">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Text="{x:Bind StartDateTime.ToString('yyyy-MM-dd', x:Null)}" />
                        <sc:CachedImage Grid.Row="1"
                                        Width="28"
                                        Height="28"
                                        HorizontalAlignment="Left"
                                        Source="{x:Bind local:StygianOnslaughtPage.DifficultyToImage(Difficulty)}" />
                        <TextBlock Grid.Row="1"
                                   Margin="36,0,0,2"
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                            <Run Text="{x:Bind Second}" /><Run Text="s" />
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



        <ScrollViewer Grid.RowSpan="2"
                      Grid.Column="1"
                      Visibility="{x:Bind CurrentInfo, Converter={StaticResource ObjectToVisibilityConverter}}">
            <StackPanel Width="700"
                        Margin="24"
                        Spacing="8">

                <Grid>
                    <!--  统计周期  -->
                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                        <Run Text="{x:Bind lang:Lang.ForgottenHallPage_Period}" />
                        <Run Text="" />
                        <Run Text="{x:Bind CurrentInfo.Schedule.StartDateTime.ToString('yyyy/MM/dd', x:Null)}" />
                        <Run Text=" - " />
                        <Run Text="{x:Bind CurrentInfo.Schedule.EndDateTime.ToString('yyyy/MM/dd', x:Null)}" />
                    </TextBlock>
                </Grid>



                <Grid>

                    <!--  最佳记录  -->
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock FontSize="16"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Text="{x:Bind lang:Lang.ImaginariumTheaterPage_BestRecord}" />
                        <sc:CachedImage Width="24"
                                        Height="24"
                                        Margin="8,0,0,0"
                                        Source="{x:Bind local:StygianOnslaughtPage.DifficultyToImage(CurrentSelectedBattle.Best.Difficulty)}" />
                        <TextBlock Margin="4,0,0,0" FontSize="16">
                            <Run Text="{x:Bind CurrentSelectedBattle.Best.Seconds}" /><Run Text="s" />
                        </TextBlock>
                    </StackPanel>

                    <!--  单人/多人模式切换  -->
                    <cwc:Segmented x:Name="Segmented_PlayerMode"
                                   HorizontalAlignment="Right"
                                   SelectionChanged="Segmented_PlayerMode_SelectionChanged">
                        <cwc:SegmentedItem Content="{x:Bind lang:Lang.StygianOnslaughtPage_SinglePlayer}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <cwc:SegmentedItem x:Name="SegmentedItem_MultiPlayer"
                                           Content="{x:Bind lang:Lang.StygianOnslaughtPage_CoOp}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    </cwc:Segmented>

                </Grid>

                <ItemsControl ItemsSource="{x:Bind CurrentSelectedBattle.Challenge}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="20" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="so:StygianOnslaughtChallenge">
                            <Grid Padding="24,12,24,12"
                                  Background="{ThemeResource CustomOverlayAcrylicBrush}"
                                  CornerRadius="8"
                                  RowSpacing="8"
                                  Shadow="{ThemeResource ThemeShadow}"
                                  Translation="0,0,16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="356" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <!--  怪物名称  -->
                                <TextBlock FontSize="16" Text="{x:Bind Name}" />
                                <!--  战斗时间  -->
                                <StackPanel Grid.Row="1"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal"
                                            Spacing="12">
                                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.StygianOnslaughtPage_BattleTime}" />
                                    <TextBlock Grid.Row="1" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run Text="{x:Bind Second}" /><Run Text="s" />
                                    </TextBlock>
                                </StackPanel>

                                <!--  阵容  -->
                                <ItemsControl Grid.Row="2"
                                              Grid.Column="0"
                                              MinHeight="73"
                                              Margin="0,4,0,8"
                                              HorizontalAlignment="Left"
                                              ItemsSource="{x:Bind Teams}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="12" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="so:StygianOnslaughtAvatar">
                                            <Grid Width="80" Height="97">
                                                <sc:CachedImage Source="{x:Bind Rarity, Converter={StaticResource RarityToGIBgConverter}}" />
                                                <sc:CachedImage VerticalAlignment="Top"
                                                                CornerRadius="0,0,12,0"
                                                                Source="{x:Bind Image}" />
                                                <Border Padding="4,0,4,2"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Top"
                                                        Background="{ThemeResource ControlOnImageFillColorDefaultBrush}"
                                                        CornerRadius="0,4,0,4"
                                                        Visibility="{x:Bind local:StygianOnslaughtPage.RankToVisibility(Rank)}">
                                                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind Rank}" />
                                                </Border>
                                                <TextBlock HorizontalAlignment="Center"
                                                           VerticalAlignment="Bottom"
                                                           FontSize="14"
                                                           Foreground="#84603D">
                                                    <Run Text="Lv." /><Run Text="{x:Bind Level}" />
                                                </TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!--  怪物图  -->
                                <sc:CachedImage Grid.Row="0"
                                                Grid.RowSpan="4"
                                                Grid.Column="1"
                                                Height="220"
                                                Margin="0,-12,0,-12"
                                                Source="{x:Bind Monster.Icon}"
                                                Stretch="Uniform" />

                                <StackPanel Grid.Row="2"
                                            Grid.Column="1"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            Orientation="Horizontal"
                                            Spacing="4">
                                    <!--  怪物等级  -->
                                    <Border Padding="8,2,8,2"
                                            VerticalAlignment="Center"
                                            Background="{ThemeResource ControlOnImageFillColorDefaultBrush}"
                                            CornerRadius="8">
                                        <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                            <Run Text="Lv." /><Run Text="{x:Bind Monster.Level}" />
                                        </TextBlock>
                                    </Border>
                                    <!--  怪物描述  -->
                                    <Button Padding="0"
                                            VerticalAlignment="Center"
                                            sh:PointerCursor.CursorShape="Hand"
                                            BorderThickness="0"
                                            CornerRadius="8">
                                        <Border Padding="4" Background="{ThemeResource ControlOnImageFillColorDefaultBrush}">
                                            <FontIcon FontSize="14"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                      Glyph="&#xE721;" />
                                        </Border>
                                        <Button.Flyout>
                                            <Flyout>
                                                <ItemsControl Width="360" ItemsSource="{x:Bind Monster.TrimmedDesc}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Spacing="6" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate x:DataType="x:String">
                                                            <sc:ColorfulTextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                                  Text="{x:Bind}"
                                                                                  TextWrapping="Wrap" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Flyout>
                                        </Button.Flyout>
                                    </Button>
                                </StackPanel>


                                <!--  最强一击/最高总伤  -->
                                <ItemsControl Grid.Row="3"
                                              Grid.ColumnSpan="2"
                                              ItemsSource="{x:Bind BestAvatar}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="16" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="so:StygianOnslaughtBestAvatar">
                                            <StackPanel Orientation="Horizontal">
                                                <sc:CachedImage Width="40"
                                                                Height="40"
                                                                Margin="0,-16,0,0"
                                                                HorizontalAlignment="Left"
                                                                Source="{x:Bind SideIcon}" />
                                                <TextBlock Margin="4,0,0,0"
                                                           VerticalAlignment="Center"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                           Text="{x:Bind local:StygianOnslaughtPage.BestTypeToString(Type)}" />
                                                <TextBlock Margin="8,0,0,0"
                                                           HorizontalAlignment="Right"
                                                           VerticalAlignment="Center"
                                                           Text="{x:Bind DPS}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>



                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


            </StackPanel>
        </ScrollViewer>


    </Grid>

</sf:PageBase>
